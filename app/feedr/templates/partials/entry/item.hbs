{{#if entry.read}}
  <li class="feedr-entry-list-item feedr-entry-read">
{{else}}
  <li class="feedr-entry-list-item">
{{/if}}
  <div class="row">

    <div class="three columns feedr-feed-title">
      <a title="{{entry.feed_title}}" href="/feed/{{entry.feed_id}}">
        {{entry.feed_title}}
      </a>
    </div>

    <div class="seven columns feedr-entry-title">
      <a title="{{entry.title}}" href="{{entry.url}}">{{entry.title}}</a>
    </div>

    <div class="two columns">
      {{> partials/entry/item_tools entry=entry}}
    </div>

  </div>
</li>
